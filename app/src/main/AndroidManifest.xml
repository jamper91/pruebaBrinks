        </activity>
        <activity android:name=".vista_1" android:screenOrientation="portrait"></activity>
        <activity android:name=".vista_2" android:screenOrientation="portrait"></activity>
        <activity android:name=".vista_3" android:screenOrientation="portrait"></activity>
