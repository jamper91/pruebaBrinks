    //region Fi
    <style name="row1">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dimension_100</item>
    </style>
    <style name="row2">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dimension_80</item>
    </style>
    //endregion

</resources>
