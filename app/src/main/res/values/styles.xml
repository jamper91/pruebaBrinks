<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
    </style>

    //region Fondos
    <style name="fondo_1">
        <item name="android:background">@drawable/fondo_verde_1</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:paddingLeft">@dimen/dimension_20</item>
        <item name="android:paddingRight">@dimen/dimension_20</item>
    </style>
    <style name="fondo_2">
        <item name="android:background">@color/blanco_1</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:paddingLeft">@dimen/dimension_20</item>
        <item name="android:paddingRight">@dimen/dimension_20</item>
    </style>
    //endregion

    <style name="header_1">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dimension_60</item>
    </style>
    <style name="ic_1">
        <item name="android:layout_width">@dimen/dimension_30</item>
        <item name="android:layout_height">@dimen/dimension_30</item>
    </style>

    <style name="ic_2">
        <item name="android:layout_width">@dimen/dimension_60</item>
        <item name="android:layout_height">@dimen/dimension_60</item>
    </style>

    //region Botones
    <style name="btn_1_blanco" parent="txt_17_negro_1">
        <item name="android:background">@drawable/boton_blanco_1</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dimension_50</item>
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">false</item>
    </style>
    //endregion

    //region Labels
    <style name="lbl_12_blanco_1" parent="txt_12_blanco_1">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="lbl_17_blanco_1" parent="txt_17_blanco_1">
