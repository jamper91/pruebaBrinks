    </style>
    <style name="lbl_17_negro_1" parent="txt_17_negro_1">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="lbl_20_blanco_1" parent="txt_20_blanco_1">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="lbl_40_blanco_1" parent="txt_40_blanco_1">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
    </style>
    //endregion

    //region Textos
    <style name="txt_12_blanco_1">
        <item name="android:textColor">@color/blanco_1</item>
        <item name="android:textSize">@dimen/dimension_12</item>
    </style>
    <style name="txt_17_blanco_1">
        <item name="android:textColor">@color/blanco_1</item>
        <item name="android:textSize">@dimen/dimension_17</item>
    </style>
    <style name="txt_17_negro_1">
        <item name="android:textColor">@color/negro_1</item>
        <item name="android:textSize">@dimen/dimension_17</item>
